{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next",
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "no-undef": "off",
    "no-redeclare": "warn"
  },
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": [
        "src/**/*.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "prettier"
      ],
      // typscript対応
      // ref: https://www.npmjs.com/package/@typescript-eslint/parser
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "react",
        "@typescript-eslint",
        "unused-imports",
        "import"
      ],
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [
            ".ts",
            ".tsx"
          ]
        },
        "import/resolver": {
          "typescript": {
            "alwaysTryTypes": true
          }
        }
      },
      "rules": {
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "unused-imports/no-unused-imports": "error",
        "sort-imports": "off",
        "import/order": [
          "error",
          {
            "alphabetize": {
              "order": "asc"
            }
          }
        ]
      }
    }
  ]
}
